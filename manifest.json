{
    "name": "Pokemon NO",
    "version": "0.2",
    "manifest_version": 2,
    
    "description": "ポケモンGOに疲れた全ての人へ。",
    
	"permissions": [
        "tabs", "https://twitter.com/*", "https://facebook.com/"
    ],
    
	"content_scripts": [ {
		"matches": [ 
			"https://www.facebook.com/*", 
			"https://twitter.com/*"
		],
		"js": [ "jquery.min.js", "background.js" ]
	}],

    "browser_action": {
        "default_title": "Pokemon NO"
    }
}